<Window x:Class="Rental.Window1"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Rental"
        mc:Ignorable="d"
        Title="Window1"  Height="500" Width="400">
    <StackPanel Margin="10">
        <StackPanel Orientation="Horizontal">
            <Label Content="Manufacturer:" Width="100"/>
            <TextBox x:Name="manufacturerTextBox" Width="250"/>
        </StackPanel>
        <StackPanel Orientation="Horizontal">
            <Label Content="Model:" Width="100"/>
            <TextBox x:Name="modelTextBox" Width="250"/>
        </StackPanel>
        <StackPanel Orientation="Horizontal">
            <Label Content="Year:" Width="100"/>
            <TextBox x:Name="yearTextBox" Width="250"/>
        </StackPanel>
        <StackPanel Orientation="Horizontal">
            <Label Content="Price:" Width="100"/>
            <TextBox x:Name="priceTextBox" Width="250"/>
        </StackPanel>
        <StackPanel Orientation="Horizontal">
            <Label Content="Category:" Width="100"/>
            <ComboBox x:Name="categoryComboBox" Width="250">
                <ComboBoxItem Content="Sedan"/>
                <ComboBoxItem Content="Sports"/>
                <ComboBoxItem Content="Cabriolet"/>
                <ComboBoxItem Content="SUV"/>
            </ComboBox>
        </StackPanel>
        <StackPanel Orientation="Horizontal">
            <Label Content="Start Date:" Width="100"/>
            <DatePicker x:Name="startDatePicker" Width="250"/>
        </StackPanel>
        <StackPanel Orientation="Horizontal">
            <Label Content="Vehicle Number:" Width="100"/>
            <TextBox x:Name="vehicleNumberTextBox" Width="250"/>
        </StackPanel>
        <Image x:Name="carImage" Height="100" Margin="10"/>
        <Button Content="Зберегти" Margin="10" Click="Add_Click"/>
    </StackPanel>
</Window>
